
<%= render "layouts/single_header" %>

<div class="w3-light-grey" style="margin-top:77px; max-width: 1400px;">
    <div class="w3-row-padding">
        <div class="w3-third">
            <div class="w3-card-4">

                <h1 class="w3-padding-16">Welcome <%= @user.username %></h1>
                <p><i class="fa fa-user-circle fa-fw w3-margin-right w3-large w3-text-teal"></i><%=@user.fname%> <%=@user.lname%></p>
                <p><i class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal"></i><%=@user.address%></p>
                <p><i class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal"></i><%=@user.email%></p>
                <p><i class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal"></i><%=@user.cell_number%></p>

            </div>
        </div>

        <div class="w3-twothird">
            <div class="w3-card" style="margin-bottom:16px !important">
                <h2 class="w3-padding-16"><i class="fa fa-fw fa-money w3-margin-right w3-text-teal"></i>Recent Transactions</h2>
                <% if @your_transactions.size != 0 %>
                    <table>
                        <tr>
                          <th>Transaction ID</th>
                          <th>Item ID</th>
                          <th>Borrow from User ID</th>
                          <th>Lend to User ID</th>
                          <th>Start Date</th>
                          <th>Due Date</th>
                          <th>Deposit</th>
                          <th>Status</th>
                          <th colspan="3"></th>
                        </tr>
                     
                        <% @your_transactions.each do |transaction| %>
                          <tr>
                            <td><%= transaction.id %></td>
                            <td><%= transaction.item_id %></td>
                            <td><%= transaction.borrow_from_user_id %></td>
                            <td><%= transaction.lend_to_user_id %></td>
                            <td><%= transaction.start_date %></td>
                            <td><%= transaction.due_date %></td>
                            <td><%= transaction.deposit %></td>
                            <td><%= transaction.status %></td>
                            <td><%= link_to 'Show', transaction_path(transaction) %></td>
                            <!--
                            <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
                            <td><%= link_to 'Destroy', transaction_path(transaction),
                                            method: :delete,
                                            data: { confirm: 'Are you sure?' } %></td>
                            -->
                          </tr>
                        <%end%>
                    </table>
                <%else%>
                    <strong>Your don't any recent transaction</strong>
                <%end%>
            </div>

            <div class="w3-card">
                <h2 class="w3-padding-16"><i class="fa fa-fw fa-users w3-margin-right w3-text-teal"></i>Friend Requests</h2>
            </div>
        </div>
    </div>
</div>

<%= render "layouts/footer" %>
