<%= render 'error' %>

<div class='container-fluid mt-5'>
    <div class='row justify-content-center'>
        <div class='col-sm-5'>
            <div class='card'>
                <div class='card-body'>

                    <h1>Edit Your Profile</h1>

                    <%= form_with(model: @person, local: true) do |form| %>

                        <div class='form-group'>
                            <%= form.label :fname, "Username (What other users will see you as)" %><br>
                            <%= form.text_field :fname, :class => 'form-control' %>
                        </div>
              
                        <div class='form-group'>
                            <%= form.label :firstname, "First Name" %><br>
                            <%= form.text_field :firstname, :class => 'form-control' %>
                        </div>

                        <div class='form-group'>
                            <%= form.label :lastname, "Last Name" %><br>
                            <%= form.text_field :lastname, :class => 'form-control' %>
                        </div>

                        <div class='form-group'>
                            <%= form.label :telephone, "Telephone #" %><br>
                            <%= form.text_field :telephone, :class => 'form-control' %>
                        </div>

                        <div class='form-group'>
                            <%= form.label :country, "Country" %><br>
                            <%= form.text_field :country, :class => 'form-control' %>
                        </div>


                        <div class='form-group'>
                            <%= form.label :city, "City" %><br>
                            <%= form.text_field :city, :class => 'form-control' %>
                        </div>

                        <div class='form-group'>
                            <%= form.label :country, "Country" %><br>
                            <%= form.text_field :country, :class => 'form-control' %>
                        </div>

                        <div>
                            <%= form.submit 'Submit', :class => 'btn btn-blue' %>
                        </div>

                    <% end %>

                </div>
            </div>
        </div>
    </div>
</div>
