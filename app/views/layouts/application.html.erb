<!DOCTYPE html>
<html>
    <head>
        <title>Lendlord</title>
        <%= csrf_meta_tags %>
        <%= csp_meta_tag %>
        <%= stylesheet_link_tag "/assets/icomoon.css" %>

        <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Abril%20Fatface" %>


        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container">
            <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>

            <%= yield %>

        </div>

    </body>
</html>
