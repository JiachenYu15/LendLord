<%= render :partial => "layouts/header", :locals => {:title => "Edit Item"}%>

<section>

  <br>

  <div class="parallax-img d-flex align-items-center">
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-md-7 text-center heading-section heading-section-white">
          <h2 style="color: black;">Update Item Details</h2>

          <%= form_for(@item) do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: "name"  %>
            </div>

            <div class="form-group">
              <%= f.text_field :deposit, class: "form-control", placeholder: "deposit"  %>
            </div>

            <div class="form-group">
              <%= f.text_field :image_link, class: "form-control", placeholder: "image link (optional)"  %>
            </div>

            <div class="form-group">
              <%= f.text_area :description, class: "form-control", placeholder: "description (optional)",cols: "30", rows: "7"  %>
            </div>
            <%= f.submit "Save the changes", class: "btn btn-primary py-3 px-5"%>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>

<br>
<br>

<%= render "layouts/footer" %>