<h1 id="item_form">Update Item Details</h1>

<div>
  <div id="item_form">
    <%= form_for(@item) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>
      <br>
      <%= f.label :deposit %>
      <%= f.text_field :deposit %>
      <br>
      <br>
      <%= f.submit "Save the changes"%>
    <% end %>
  </div>
</div>