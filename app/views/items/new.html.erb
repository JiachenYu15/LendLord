<h1 id="item_form">Post Item</h1>

<div>
  <div id="error_explanation">
    <% if @item.errors.any? %>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>
  <br>
  <div id="item_form">
    <%= form_for(@item) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>
      <br>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <br>
      <br>
      <%= f.label :deposit %>
      <%= f.text_field :deposit %>
      <br>
      <br>
      <%= f.submit "Post your item"%>
    <% end %>
  </div>
</div>