<%= render :partial => "layouts/header", :locals => {:title => "Item"}%>

<%= render "layouts/search_bar" %>

<section>
  <br>
  <br>
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 heading-section text-center fadeInUp ftco-animated">
        <h2 class="mb-4">
        <% flash.each do |key, value| %>
          <strong><%= value %></strong>
        <% end %>
        </h2>
      </div>
    </div>
  </div>
  <div class="parallax-img d-flex align-items-center" style="padding-left: 20%; padding-right: 20%;">

    <div class="destination">
      <h3><%= @item.name %></h3>
      <%= render :partial => "items/show_single_item", :locals => {:item => @item, :type => "borrow"}%>
    </div>
  </div>
  <br>

</section>


<%= render "layouts/more_items"%>
<br>

<%= render "layouts/footer"%>