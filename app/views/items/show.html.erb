<%= render :partial => "layouts/header", :locals => {:title => "Item"}%>

<%= render "layouts/search_bar" %>

<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 heading-section text-center fadeInUp ftco-animated">
        <h2 class="mb-4">
          <% flash.each do |key, value| %>
            <strong><%= value %></strong>
          <% end %>
        </h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <div class="col-lg-3 sidebar order-md-last" style="padding-left: 2%;padding-right: 2%;">
        <div class="sidebar-wrap">
          <h3 class="heading mb-4">User <%= @user.username %></h3>
          <div class="img img-2 d-flex justify-content-center align-items-center" style="height:300px;background-image: url('/assets/default_profile.jpg');"></div>
        </div>
      </div>

      <div class="col-lg-9">


          <div class="destination" style="padding-left: 10%;padding-right: 10%;">
            <h3><%= @item.name %></h3>

            <% if defined?(@item.image_link) && @item.image_link && @item.image_link!=""%>
              <div class="img img-2 d-flex justify-content-center align-items-center" style="height:400px;background-image: url(<%= @item.image_link %>);"></div>
            <% else %>
              <div class="img img-2 d-flex justify-content-center align-items-center" style="height:400px;background-image: url('/assets/default.jpg');"></div>
            <%end %>
            <div class="text p-3">
              <div class="d-flex">
                <div class="one">
                  <p class="rate">
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star"></i>
                    <i class="icon-star-o"></i>
                    <span>8 Rating</span>
                  </p>
                </div>
                <div class="two">
                  <span class="price per-price">Deposit $<%= @item.deposit %><br></span>
                </div>
              </div>
              <p><%= @item.description %></p>
              <hr>
              <p class="bottom-area d-flex">
                <span><i class="icon-map-o"></i> Toronto, ON</span>
                <span class="ml-auto"><%= link_to 'Borrow Now', borrow_item_path(@item.id) %></span>
              </p>
            </div>
        </div>

      </div>
    </div>
  </div>
</section>


<%= render "layouts/more_items"%>
<br>

<%= render "layouts/footer"%>