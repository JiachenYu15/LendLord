
<div class='container-fluid mt-5'>
  <div class='row justify-content-center'>
    <div class='col-sm-5'>
      <div class="card">
        <div class="card-body">




<%= form_with model: @transaction, local: true do |form| %>





  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@transaction.errors.count, "error") %> prohibited
        this transaction from being saved:
      </h2>
      <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :item_id, "Item ID:" %><br>
    <%= form.number_field :item_id, min: 1, max: 100000000, step: 1, placeholder: @transaction.item_id %>
  </p>

  <p>
    <%= form.label :user_id, "Lend to User ID:" %><br>
    <%= form.number_field :user_id, min: 1, max: 100000000, step: 1, placeholder: @transaction.user_id %>
  </p>

  <p>
    <%= form.label :start_date, "Start Date:" %><br>
    <%= form.date_field :start_date %>
  </p>

  <p>
    <%= form.label :due_date, "Due Date:" %><br>
    <%= form.date_field :due_date %>
  </p>

  <p>
    <%= form.label :deposit, "Deposit:" %><br>
    <%= form.number_field :deposit, min: 0, max: 10000000, step: 0.01 %>
  </p>

  <p>
    <%= form.label :status, "Status:" %><br>
    <%= select(:transaction, :status, options_for_select([['pending', 'pending'],
                                                ['accepted', 'accepted'],
                                                ['rejected', 'rejected'],
                                                ['returned', 'returned'],
                                                ['closed', 'closed'],
                                                ['force closed', 'force closed']], @transaction.status)) %>




  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>



        </div>
      </div>
    </div>
  </div>
</div>
